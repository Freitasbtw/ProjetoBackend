@model List<ProdutoModel>
@{
    ViewData["Title"] = "Listagem de produtos";
}

<div class="text-center my-4">
    <div class="text-start">
        <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Cadastrar">Adicionar novo produto</a>
    </div>
    <h1 class="dislay-4">Listagem de produtos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produto</th>
                <th scope="col">Categoria</th>
                <th scope="col">Preço unitário</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @if ("../Arquivos/produtos.txt" != null && "../Arquivos/produtos.txt".Any())
            {
                @foreach (ProdutoModel produto in Model)
                {
                    <tr>
                        <td>@produto.Nome</td>
                        <td>@produto.Categoria</td>
                        <td>@produto.Preco</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@produto.Nome" asp-controller="Produto" asp-action="Editar">Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@produto.Nome" asp-controller="Produto" asp-action="DeletarConfirmar">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>